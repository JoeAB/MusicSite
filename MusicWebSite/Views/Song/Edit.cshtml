@model MusicWebSite.ViewModels.Song.EditSongViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Song</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="song.id" type="hidden" />
            </div>
            <div class="form-group">
                <label asp-for="song.name" class="control-label"></label>
                <input asp-for="song.name" class="form-control" />
                <span asp-validation-for="song.name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="song.filePath" class="control-label"></label>
                <input asp-for="song.filePath" class="form-control" />
                <span asp-validation-for="song.filePath" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="song.releaseDate" class="control-label"></label>
                <input asp-for="song.releaseDate" class="form-control" />
                <span asp-validation-for="song.releaseDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="song.videoPath" class="control-label"></label>
                <input asp-for="song.videoPath" class="form-control" />
                <span asp-validation-for="song.videoPath" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="song.songArtistID" type="hidden" />
            </div>
            <div class="form-group">
                <select asp-for="song.songGenreID" asp-items="@(new SelectList(Model.genreList,"id","name"))">
                    <option>Select a Genre</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="View" asp-route-id="@Model.song.id">Back to Song Details</a>
</div>

